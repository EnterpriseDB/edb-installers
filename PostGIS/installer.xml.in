                        <ruleGroup>
                            <ruleList>  
                               <compareText>
                                  <text>${platform_name}</text>
                                  <logic>does_not_equal</logic>
                                  <value>windows</value>
                               </compareText>
                            </ruleList>
                        </ruleGroup>
                    </ruleList>
