                        </compareText>
                        <compareText>
                           <text>${platform_name}</text>
                           <logic>equals</logic>
                           <value>windows</value>
                        </compareText>
                      </ruleList>
                </setInstallerVariableFromRegEx>
            </validationActionList>
            <validationActionList>
                <actionGroup>
