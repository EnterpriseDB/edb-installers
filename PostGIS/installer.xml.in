                        <ruleGroup>
                            <ruleList>   
                               <compareText>
                                  <text>${platform_name}</text>
                                  <logic>equals</logic>
                                  <value>windows</value>
                               </compareText>
                            </ruleList>
                        </ruleGroup>
                    </ruleList>
                </actionGroup>
