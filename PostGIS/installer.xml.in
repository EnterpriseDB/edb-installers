                                  <condition>not_exists</condition>
                               </fileTest>
                               <fileTest>
                                  <path>${installdir}/bin/createlang</path>
                                  <condition>not_exists</condition>
                               </fileTest>
                               <fileTest>
                                  <path>${installdir}/bin/pg_config</path>
                                  <condition>not_exists</condition>
                               </fileTest>
                            </ruleList>
