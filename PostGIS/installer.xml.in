                    <name>pg_version</name>
                    <exec>${system_temp_directory}/${product_fullname}/check-pgversion.sh</exec>
                    <execArgs>"${installdir}"</execArgs>
                    <workingDirectory>${system_temp_directory}/${product_fullname}</workingDirectory>
                    <ruleList>
                        <compareText>
