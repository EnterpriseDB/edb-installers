                      <name>pg_version</name>
                      <text>${pg_version_str}</text>
                      <pattern>^PostgreSQL ([0-9].[0-9]).*$</pattern>
                      <substitution>\1</substitution>
                      <ruleList>
                         <compareText>
                             <logic>does_not_equal</logic>
                             <text>${pg_version_str}</text>
