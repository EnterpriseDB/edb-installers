                <setInstallerVariable>
                    <name>_re</name>
                    <value>^${_re}\\([0-9a-zA-Z_\\\s\.\-\(\)]*)</value>
                    
                    <ruleList>
                        <compareText>
                            <logic>equals</logic>
                            <text>${platform_name}</text>
