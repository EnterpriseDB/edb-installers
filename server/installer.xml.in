        </runProgram>

     
	<!-- Check user validation in case of unattended mode. It works after createuser. -->
	<actionGroup>
	    <actionList>
		<!-- seperate out domain name from ${serviceaccount} and assign it to ${servicedomain}-->
		 <setInstallerVariable>
		       <name>servicedomain</name>
