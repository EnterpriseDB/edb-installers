                    <ruleList>
                       <compareText text="${platform_name}" logic="does_not_equal" value="windows" />
                    </ruleList>
                </actionGroup>

                <actionGroup>
                    <actionList>
                        <deleteFile path="${installdir}\pg_env.bat" >
