                        <registrySet key="HKEY_LOCAL_MACHINE\SOFTWARE\EnterpriseDB\pphqagent" name="secure-connection" value="${pphqsecureconn}"/>
                        <registrySet key="HKEY_LOCAL_MACHINE\SOFTWARE\EnterpriseDB\pphqagent" name="pphquser" value="${pphquser}"/>
