  <!-- preUninstallation actions -->
  <preUninstallationActionList>
    <!-- Linux | Mac actionList -->
    <actionGroup>
      <actionList>
        <!-- Stop Apache -->
        <runProgram>
          <customErrorMessage>${msg(error.uninstall.stop.apache)}</customErrorMessage>
          <program>${installdir}/apache/bin/apachectl</program>
